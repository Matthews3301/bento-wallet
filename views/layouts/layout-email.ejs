<% /* Default layout for email templates */ %>
<div style="color: #ffffff; background-color: #2c2f36; width: 100%; font-family: 'Arial', 'Helvetica Neue', 'Helvetica', sans-serif; box-sizing: border-box; padding-bottom: 25px; margin: 0;">
  <div style="background: transparent; padding-top: 30px; padding-bottom: 20px; text-align: center;">
    <a href="<%= sails.config.custom.baseUrl %>" title="Bento Wallet" target="_blank" style="color: white; text-decoration: none; width: 150px; display: inline-block;">
      <img src="<%= sails.config.custom.baseUrl + '/images/logo.png' %>" alt="Bento Wallet" style="width: 60px; display: block; margin: auto">
      <span style="font-size: 1.4rem">Bento Wallet</span>
    </a>
  </div>
  <div style="
    max-width: 420px;
    width: 100%;
    background: #212429;
    box-shadow: rgba(0, 0, 0, 0.01) 0px 0px 1px, rgba(0, 0, 0, 0.04) 0px 4px 8px, rgba(0, 0, 0, 0.04) 0px 16px 24px, rgba(0, 0, 0, 0.01) 0px 24px 32px;
    border-radius: 30px;
    color: white;
    margin: auto auto 30px;
    font-size: 16px;
    text-align: center;
  ">
    <div style="padding: 1.4rem;">

      <%- body %>

    </div>
  </div>
</div>
