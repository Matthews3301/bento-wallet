<div id="transactions" class="m-auto w-100 text-center" v-cloak>
  <div class="box container-fluid">
    <div class="text-right w-100">
      <a href="/" style="float: left">< Back</a>
      <a href="/logout">Sign out</a>
    </div>
    <h3 class="my-4">Recent transactions</h3>
    <div class="mt-2 w-100 branded-scrollbars" style="max-height: 500px; overflow-y: auto; overflow-x: hidden;">

      <div v-for="transaction in transactions" class="mb-4">
        <div>
          <span style="margin-right: 2px">Balance: ฿</span><span>{{(transaction.accountBalance / 100000000.0).toString().split('.')[0].replace('-', '')}}</span><span class="mr-1">.</span><span
            v-for="decThree in ((transaction.accountBalance / 100000000.0).toString().split('.')[1] || '0').match(/.{1,3}/g)"
            class="mr-1"
          >{{decThree}}</span>
        </div>
        <div :style="transaction.amount > 0 ? {color: 'green'} : {color: 'indianred'}">
          <span style="margin-right: 2px">฿</span><span>{{(transaction.amount / 100000000.0).toString().split('.')[0].replace('-', '')}}</span><span class="mr-1">.</span><span
            v-for="decThree in ((transaction.amount / 100000000.0).toString().split('.')[1] || '0').match(/.{1,3}/g)"
            class="mr-1"
          >{{decThree}}</span>
          <span class="ml-1">
            <a :href="nodeInfoTxUrl.replace('XXXXX', transaction.hash)" target="_blank" class="d-inline-flex" style="height: 13px">
              <svg style="width: 14px" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="external-link-alt" class="svg-inline--fa fa-external-link-alt fa-w-16" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path fill="currentColor" d="M432,320H400a16,16,0,0,0-16,16V448H64V128H208a16,16,0,0,0,16-16V80a16,16,0,0,0-16-16H48A48,48,0,0,0,0,112V464a48,48,0,0,0,48,48H400a48,48,0,0,0,48-48V336A16,16,0,0,0,432,320ZM488,0h-128c-21.37,0-32.05,25.91-17,41l35.73,35.73L135,320.37a24,24,0,0,0,0,34L157.67,377a24,24,0,0,0,34,0L435.28,133.32,471,169c15,15,41,4.5,41-17V24A24,24,0,0,0,488,0Z"></path></svg>
            </a>
          </span>
        </div>
        <div style="color: darkgrey">
          {{(new Date(transaction.time * 1000)).toLocaleString()}}
        </div>
      </div>


    </div>
  </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
