<div id="forgot-password" class="m-auto w-100" v-cloak>
  <div class="box container-fluid">
    <h3 class="text-center">Recover password</h3>
    <div class="mx-auto mt-4 text-center" v-if="!cloudSuccess">
      <p class="text-center">Enter your email address below to reset the password for your account.</p>
      <ajax-form action="sendPasswordRecoveryEmail" :syncing.sync="syncing" :cloud-error.sync="cloudError" :form-data="formData" :form-rules="formRules" :form-errors.sync="formErrors" @submitted="submittedForm()">
        <div class="form-group input-area">
          <div class="input-label text-left">Email address</div>
          <input type="email" name="email-address" class="input-input" placeholder="" :class="[formErrors.emailAddress ? 'is-invalid' : '']" v-model.trim="formData.emailAddress" autocomplete="email" focus-first>
          <div class="invalid-feedback" v-if="formErrors.emailAddress">Please enter a valid email address.</div>
        </div>
        <cloud-error v-if="cloudError"></cloud-error>
        <div class="form-group mt-4">
          <ajax-button type="submit" :syncing="syncing" class="button">Send reset link</ajax-button>
        </div>
      </ajax-form>
      <p class="text-center"><a href="/login">Back to login</a></p>
    </div>
    <div style="max-width:  450px;" class="mx-auto text-center mt-4" v-else>
      <p>We've sent you a link to update your password.</p>
      <hr/>
      <p>If the email doesnâ€™t arrive after a few minutes, try checking your spam folder.</p>
      <p class="text-center"><a class="btn btn-outline-primary" href="/login">Back to login</a></p>
    </div>
  </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
